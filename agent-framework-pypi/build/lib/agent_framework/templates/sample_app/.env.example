# AI Agent Framework - Sample App Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider (Required)
# =============================================================================

# OpenAI API key (required)
OPENAI_API_KEY=sk-your-api-key-here

# Model for workers (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Model for orchestrator/strategic planning (default: gpt-4o)
OPENAI_STRATEGIC_MODEL=gpt-4o

# =============================================================================
# Context Configuration (Optional)
# =============================================================================

# Truncation limits (characters)
# AGENT_STRATEGIC_PLAN_TRUNCATE_LEN=2000
# AGENT_DIRECTOR_CONTEXT_TRUNCATE_LEN=4000
# AGENT_OBSERVATION_TRUNCATE_LEN=1500

# History settings
# AGENT_MAX_CONVERSATION_TURNS=10
# AGENT_MAX_EXECUTION_TRACES=20

# Enable/disable truncation logging
# AGENT_LOG_TRUNCATION=true

# =============================================================================
# ReAct Planner Controls (Optional)
# =============================================================================

# Include conversation history in prompts
# AGENT_REACT_INCLUDE_HISTORY=true

# Include execution traces (action/observation)
# AGENT_REACT_INCLUDE_TRACES=true

# Include global updates from shared memory
# AGENT_REACT_INCLUDE_GLOBAL_UPDATES=true

# =============================================================================
# Logging (Optional)
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
# AGENT_LOG_LEVEL=INFO

# Enable detailed router logging
# AGENT_LOG_ROUTER_DETAILS=false

# =============================================================================
# Job/Session ID (Optional - set programmatically)
# =============================================================================

# Unique identifier for the current job/session
# Used for memory namespacing
# JOB_ID=job_123
